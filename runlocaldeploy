if [ ! -e "$1" ]
then
  echo -e "./runlocaldeploy myenv\n\n"
  echo "Please provide your own environment file, Sample myenv file content:"
  echo "$envfile"
  exit 1
fi

wercker --environment $1 dev --wercker-yml wercker_local_deploy.yml --publish 80
